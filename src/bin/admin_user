#!/usr/bin/env node
var config = require('../api/config/application')
  , User = require('../lib/documents/user')
  , app = {
    get: function(env) {
        return 'production'
    }
  };

//connect to the db
config.db(app);

//admin user
var email = 'admin@momsbloom.com'
  , password = 'replaceme'
  , admin = new User({first:'Admin', last:'User', email:, password:password});

//create user if the admin user doesn't exist already
User.findOne({email:email}, function(err, u) {
    if (err) throw err;
    if (u) {
        process.exit(0);
    } else {
        admin.save(function(err, u) {
            if (err) throw err;
            console.log("Admin user created\n");
            process.exit(0);
        });
    }
});